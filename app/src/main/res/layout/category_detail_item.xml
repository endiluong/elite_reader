<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/MatBlack">

    <ImageView
        android:id="@+id/cat_detail_item_img"
        android:layout_width="124dp"
        android:layout_height="109dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/MatBlack"
        android:src="@mipmap/ic_launcher_round"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="108dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/cat_detail_item_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/cat_detail_item_img"
        app:layout_constraintTop_toTopOf="@+id/cat_detail_item_img"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/cat_detail_item_tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="@color/MatOrange"
            android:textSize="24dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cat_detail_item_tv_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Information"
            android:textColor="@color/lightGray"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/cat_detail_item_tv_chapter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last Update"
            android:textColor="@color/darkGray"
            android:textSize="18dp" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>