<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/MatBlack"
    android:orientation="vertical"
    tools:context=".Novel_Detail">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_launcher_background" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/novel_detail_tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Novel Name"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/lightGray"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/novel_detail_tv_info1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:paddingLeft="8dp"
            android:text="Info 1"
            android:textColor="@color/MatOrange"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/novel_detail_tv_info2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:paddingLeft="8dp"
            android:text="Info 1"
            android:textColor="@color/MatOrange"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/novel_detail_tv_info3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:paddingLeft="8dp"
            android:text="Info 1"
            android:textColor="@color/MatOrange"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/novel_detail_tv_info4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:paddingLeft="8dp"
            android:text="Info 1"
            android:textColor="@color/MatOrange"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/novel_detail_tv_info5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:paddingLeft="8dp"
            android:text="Info 1"
            android:textColor="@color/MatOrange"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/novel_detail_tv_info6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:paddingLeft="8dp"
            android:text="Info 1"
            android:textColor="@color/MatOrange"
            android:textSize="18dp" />

        <Button
            android:id="@+id/novel_detail_btn_reading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@color/MatBlue"
            android:text="Start Reading"
            android:textColor="#fff" />

    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="?android:attr/listDivider"
        android:paddingTop="8dp"
        android:paddingBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/novel_detail_tv_categories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:paddingLeft="8dp"
            android:text="Categories"
            android:textColor="@color/lightGray"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/novel_detail_tv_subinf1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:paddingLeft="8dp"
            android:text="Sub info 1"
            android:textColor="@color/lightGray"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/novel_detail_tv_subinf2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:paddingLeft="8dp"
            android:text="Sub info 2"
            android:textColor="@color/lightGray"
            android:textSize="18dp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>